<!-- Views/Filmes/Details.cshtml -->
@model Filme

@{
    ViewBag.Title = @Model.Title;
    Layout = null; // Manter o layout como null para este exemplo específico
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Filmes")">Início</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <img src="https://image.tmdb.org/t/p/w500/@Model.PosterPath" alt="@Model.Title poster" class="img-fluid" />
            </div>
            <div class="col-md-8">
                <h2>@Model.Title</h2>
                <p><strong>Lançamento:</strong> @Model.ReleaseDate</p>
                <p><strong>Sinopse:</strong> @Model.Overview</p>
                <p><strong>Média de Votos:</strong> @Model.VoteAverage</p>
                <p>
                    <strong>Gêneros:</strong>
                    @foreach (var genre in Model.Genres)
                    {
                        @genre.Name
                    }
                </p>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
