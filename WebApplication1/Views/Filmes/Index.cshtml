<!-- Views/Filmes/Index.cshtml -->
@model IEnumerable<Filme>

@{
    ViewBag.Title = "Filmes Populares";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Index", "Filmes")">Filmes</a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("FilmesSalvos", "Filmes")">Filmes Salvos</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h2 class="text-center my-4">Filmes Populares</h2>
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/@movie.PosterPath" alt="@movie.Title Poster">
                        <div class="card-body text-center">
                            <h5 class="card-title">@movie.Title</h5>
                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">Ver Detalhes</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
